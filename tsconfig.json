{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "src/**/*",
    "tests/conversion/routes.test.ts",
    "tests/exchange/routes.test.ts"
  ],
  "exclude": ["./tests/", "./node_modules/", "./dist/"]
}
